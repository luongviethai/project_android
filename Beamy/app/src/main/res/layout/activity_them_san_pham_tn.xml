<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSanPhamTnActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm sản phẩm"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                ></TextView>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/imgThemSP"
                android:layout_gravity="center"
                android:src="@drawable/icontheem"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textColor="#4F4F4F"

                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtTenSpCT"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textColor="#4F4F4F"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtGia"
                android:inputType="number"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại"
                android:textColor="#4F4F4F"
                />


           <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
               android:visibility="gone"
                android:id="@+id/edtLoai"

                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spnLoaiSP"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textColor="#4F4F4F"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtMota"

                />

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại"
                android:textColor="#4F4F4F"
                />


            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtLoai1"

                />
-->


           <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
               android:visibility="gone"
                android:id="@+id/edtShop"

                />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnThemSP"
                android:text="Thêm"
                android:textColor="@color/white"
                android:backgroundTint="#D84315"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>