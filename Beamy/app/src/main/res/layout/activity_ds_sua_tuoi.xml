<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DsSuaTuoiActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.6">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/undo"
                android:id="@+id/ibtnQL">

            </ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sữa tươi"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#D84315">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:padding="5dp">

            <EditText
                android:id="@+id/edttimhealthy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@drawable/custom_edit_text"
                android:hint="Nhập tên sản phâm"></EditText>

            <ImageButton
                android:id="@+id/ibtntimhealthy"
                android:src="@drawable/find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </ImageButton>
        </LinearLayout>
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:id="@+id/sphealthy">
        </Spinner>
        <GridView
            android:verticalSpacing="10dp"
            android:id="@+id/gvdshealthy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
        </GridView>
    </LinearLayout>
</LinearLayout>